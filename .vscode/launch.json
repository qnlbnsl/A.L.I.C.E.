    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "subProcess": true,
            "pythonArgs": ["-Xfrozen_modules=off"],
        },
        {
            "name": "Python: Server",
            "type": "python",
            "request": "launch",
            "program": "src/server/app.py",
            "console": "integratedTerminal",
            "subProcess": true,
            "justMyCode": true,
            "pythonArgs": ["-Xfrozen_modules=off"],
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            }
        },
        {
            "name": "Python: Client",
            "type": "python",
            "request": "launch",
            "program": "src/client/app.py",
            "console": "integratedTerminal",
            "subProcess": true,
            "justMyCode": true,
            "pythonArgs": ["-Xfrozen_modules=off"],
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            }
        }
    ]
}